<Window x:Name="Text_Messages_Window" x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0*"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<ComboBox x:Name="contactsComboBox" HorizontalAlignment="Left" Margin="361,24,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="contactsComboBox_SelectionChanged" Grid.ColumnSpan="2"/>
		<Label Content="Text messages with:" HorizontalAlignment="Left" Margin="223,24,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
		<RichTextBox x:Name="messagesRichTextBox" HorizontalAlignment="Left" Height="301" Margin="10,109,0,0" VerticalAlignment="Top" Width="774" Grid.ColumnSpan="2">
			<FlowDocument>
				<Paragraph>
					<Run Text="RichTextBox"/>
				</Paragraph>
			</FlowDocument>
		</RichTextBox>
	</Grid>
</Window>
